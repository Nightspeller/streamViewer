.mainScreen
  position absolute
  width 100%
  height 100%
  .appTitle
    position absolute
    top 45%
    width 100%
    text-align center
    z-index 0
    font-size 250%
    font-family 'Playball', cursive
  .preview
    position absolute
    display block
    top 0
    left 0
    z-index 2
    width 100%
    height 100%
    border 1px solid silver
    box-sizing border-box
    iframe, video
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  .active
    position absolute
    top 0
    left 0
    z-index 1
    width 100%
    height 100%
    border 1px solid silver
    box-sizing border-box
    iframe, video
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  .activeWithPreview
    top auto
    left auto
    bottom 0
    right 0
  .allStreamsContainer
    position relative
    width 100%
    height 100%
    z-index 3
    #allStreams0
      position absolute
      border 1px solid blue
      width 50%
      height 50%
      top 0
      left 0
    #allStreams1
      position absolute
      border 1px solid green
      width 50%
      height 50%
      top 0
      left 50%
    #allStreams2
      position absolute
      border 1px solid yellow
      width 50%
      height 50%
      top 50%
      left 0
    #allStreams3
      position absolute
      border 1px solid red
      width 50%
      height 50%
      top 50%
      left 50%
    iframe, video
      width 100%
      height 100%