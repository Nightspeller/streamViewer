.mainScreen
  position absolute
  width 100%
  height 100%
  border 1px solid red
  background black
  overflow hidden
  .video
    position relative
    width 100%
    height 100%
  .video1
    background lightblue
  .video2
    background lightcoral
  .preview
    position absolute
    display block
    top 0
    left 0
    border 5px solid green
    resize both
  .active
    position absolute
    bottom 0
    right  0
    border 5px solid yellow
    resize both