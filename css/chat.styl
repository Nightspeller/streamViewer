.chat
  position absolute
  top 0
  left 0
  display flex
  flex-direction column
  width 100%
  height 100%
  color silver
  border 2px dashed purple
  padding 0
  .chatMessages
    flex-grow 1000
    background #19191f
    overflow-x hidden
    overflow-y scroll
    margin-bottom 2px
    .message
      color white
      .author
        color yellow
  .inputWrapper, .channelWrapper
    flex 2 0 auto
    display flex
    flex-direction row
    width 100%
    border 2px solid yellow
    .messageInput, .channelInput
      border none
      flex-grow 1000
      padding 0
      background #232329
    button
      flex 0 1 auto