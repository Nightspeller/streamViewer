.picker-overlay
  /* A dark translucent div that covers the whole screen */
  position absolute
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.75)
.picker-dialog
  /* A centered div above the overlay with a box shadow. */
  z-index 10000
  position absolute
  width 100%
  border-top 1px solid silver
  border-bottom 1px solid silver
  /* Center the dialog */
  top 10%
  bottom 10%
  left 0
  overflow-y scroll
  .picker-close, .picker-back
    position absolute
    cursor pointer
    border none
  .picker-back
    top 3px
    left 5px
  .picker-close
    top 3px
    right 5px
  .picker-content
    text-align center
    .picker-pagination
      width 100%
      text-align center
      button
        cursor pointer
        border none
    .card
      display inline-block
      width 20%
      padding 1em
      .description
        color #ffff00
      img
        max-width 100%
        max-height 80%