html
  height 100%
  font-size 100%
  body
    height 100%
    background #000000
    color #c0c0c0
    margin 0
    padding 0
    .flexContainer
      display -webkit-flex
      -webkit-flex-direction column
      height 100%
      .streamOverviewList
        text-align center
        -webkit-flex 0 1 auto
        border 1px solid blue
      .mainAndChat
        position relative
        -webkit-flex 2 0 auto
        display -webkit-flex
        -webkit-flex-direction row
        border 1px solid red
        .mainScreenSection
          position relative
          border 1px solid green
          -webkit-flex-grow 1000
          color silver
        .chatSection
          position relative
          border 1px solid yellow
          -webkit-flex-basis 300px
          color silver
