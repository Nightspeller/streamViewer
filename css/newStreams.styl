  height 100%
  font-size 100%
  body
    height 100%
    background #000000
    color #c0c0c0
    margin 0
    padding 0
    .flexContainer
      display flex
      flex-direction column
      height 100%
      .streamOverviewList
        text-align center
        flex 0 1 auto
        border 1px solid blue
      .mainAndChat
        position relative
        flex 2 0 auto
        display flex
        flex-direction row
        border 1px solid red
        .mainScreenSection
          position relative
          border 1px solid green
          flex-grow 1000
          color silver
        .chatSection
          position relative
          border 1px solid yellow
          flex-basis 300px
          color silver
