.sv-screen
  position relative
  .sv-screen-controls
    position absolute
    top 0
    right 0
    z-index 5
    button
      display block
      background rgba(0,0,0,0.4)
      font-size 1.5em
    button:hover
      color yellow
      border-color rgba(0,0,0,0)
    button.highlighted
      color yellow